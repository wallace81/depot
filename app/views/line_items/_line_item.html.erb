
<% @cart.line_items.each do |item| %>
<tr>
<td><%= link_to 'Remove', item, :method => :delete %></td>
<td><%= item.quantity %></td>
<td><%= item.product.title %></td>
<td><%= item.product.price %> &euro;</td>
<td class="item_price" ><%= number_to_currency(item.total_price, :unit => "&euro;", :separator => ",", :delimiter => "", :format => "%n %u") %></td>
</tr>
<% end %>
